<?xml version="1.0"?>
<openerp>
    <data>
        <!-- stock.picking.manual-->
        <record model="ir.ui.view" id="view_stock_picking_fast_tree">
            <field name="name">stock.picking.manual.tree</field>
            <field name="model">stock.picking.manual</field>
            <field name="arch" type="xml">
                <tree string="String" colors="green:pick_state=='ready';blue:pick_state=='todo'">
                    <field name="partner_id" />
                    <field name="address_id" />
                    <field name="name"/>
                    <field name="date"/>      
                    <field name="planned_date" />
                    <field name="intervention_id" />
                    <field name="state" />
                    <button name="wf_ready" string="Ready" type="object" attrs="{'invisible': [('pick_state','!=','todo')]}" class="oe_highlight"/>
                    <button name="wf_delivered" string="Delivered" type="object" attrs="{'invisible': [('pick_state','!=','ready')]}" class="oe_highlight"/>
                    <button name="wf_restart" string="Restart" type="object" attrs="{'invisible': [('pick_state','!=','delivered')]}" class="oe_highlight"/>
                    <button name="add_to_intervention" string="Add" type="object" class="oe_highlight" invisible="not context.get('show_move')" attrs="{'invisible': [('intervention_id','!=',False)]}"/>
                    <button name="remove_to_intervention" string="Unlink" type="object" attrs="{'invisible': [('intervention_id','=',False)]}" />
                </tree>
            </field>
        </record>                
        <record model="ir.ui.view" id="view_stock_picking_fast_form">
            <field name="name">stock.picking.manual.form</field>
            <field name="model">stock.picking.manual</field>
            <field name="arch" type="xml">
                <form string="Transfer">
                    <header>
                        <button name="wf_ready" string="Ready" type="object" attrs="{'invisible': [('pick_state','!=','todo')]}" class="oe_highlight"/>
                        <button name="wf_delivered" string="Delivered" type="object" attrs="{'invisible': [('pick_state','!=','ready')]}" class="oe_highlight"/>
                        <button name="wf_restart" string="Restart" type="object" attrs="{'invisible': [('pick_state','!=','delivered')]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id"/>                            
                                <field name="address_id"/>                                
                                <field name="intervention_id" />
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="planned_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <separator string="Stock Moves"/>
                                <field name="line_ids">
                                    <tree string="Stock Moves" editable="bottom">
                                        <field name="product_id" />
                                        <field name="product_uom_qty" />
                                        <field name="uom_id" />
                                        <field name="state" readonly="1"/>
                                    </tree>                                
                                </field>
                                <field name="note" placeholder="Add an internal note..." class="oe_inline"/>
                            </page>                            
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>        
        
