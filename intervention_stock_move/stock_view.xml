<?xml version="1.0"?>
<openerp>
    <data>
        <!--res.company-->
        <record model="ir.ui.view" id="view_res_company_stock_page_parameter_form">
            <field name="name">res.company.stock.parameter.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Stock">
                        <group colspan="4" col="4">
                            <field name="manual_picking_type_id" />
                        </group>    
                    </page>
                </xpath>
            </field>
        </record>
        
        <!-- stock.move.manual-->
        <record model="ir.ui.view" id="view_stock_move_fast_tree">
            <field name="name">stock.move.manual.tree</field>
            <field name="model">stock.move.manual</field>
            <field name="arch" type="xml">
                <tree string="Move" editable="bottom">
                    <field name="picking_id" invisible="context.get('embedded', False)"/>      
                    <field name="intervention_id" invisible="context.get('embedded', False)" />
                    <field name="partner_id" invisible="context.get('embedded', False)"/>
                    <field name="date" invisible="context.get('embedded', False)" />

                    <field name="product_id"/>
                    <field name="product_uom_qty" />
                    <field name="uom_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>                
        <record model="ir.ui.view" id="view_stock_move_fast_form">
            <field name="name">stock.move.manual.tree</field>
            <field name="model">stock.move.manual</field>
            <field name="arch" type="xml">
                <form string="Move">
                    <sheet>
                        <field name="picking_id" invisible="1"/>      
                        <field name="intervention_id" />
                        <field name="product_id"/>
                        <field name="product_uom_qty" />
                        <field name="uom_id" />
                        <field name="state" />
                    </sheet>
                </form>
            </field>
        </record>

        <!-- stock.picking.manual-->
        <record model="ir.ui.view" id="view_stock_picking_fast_tree">
            <field name="name">stock.picking.manual.tree</field>
            <field name="model">stock.picking.manual</field>
            <field name="arch" type="xml">
                <tree string="Picking" colors="green:state=='ready';blue:state=='todo'">
                    <field name="partner_id" domain="[('is_company', '=', True),('is_address', '=', False)]"/>
                    <field name="address_id" domain="[('is_address', '=', True),('parent_id', '=', partner_id)]" />
                    <field name="name"/>
                    <field name="date"/>      
                    <field name="planned_date" />
                    <field name="intervention_id" domain="[('intervent_partner_id', '=', partner_id)]" />
                    <field name="state" />
                    <button name="wf_ready" string="Ready" type="object" attrs="{'invisible': [('state','!=','todo')]}" class="oe_highlight"/>
                    <button name="wf_delivered" string="Delivered" type="object" attrs="{'invisible': [('state','!=','ready')]}" class="oe_highlight"/>
                    <button name="wf_restart" string="Restart" type="object" attrs="{'invisible': [('state','!=','delivered')]}" class="oe_highlight"/>
                    <button name="add_to_intervention" string="Add" type="object" class="oe_highlight" invisible="not context.get('show_move')" attrs="{'invisible': [('intervention_id','!=',False)]}"/>
                    <button name="remove_to_intervention" string="Unlink" type="object" attrs="{'invisible': [('intervention_id','=',False)]}" />
                </tree>
            </field>
        </record>                
        <record model="ir.ui.view" id="view_stock_picking_fast_form">
            <field name="name">stock.picking.manual.form</field>
            <field name="model">stock.picking.manual</field>
            <field name="arch" type="xml">
                <form string="Picking">
                    <header>
                        <button name="wf_ready" string="Ready" type="object" attrs="{'invisible': [('state','!=','todo')]}" class="oe_highlight"/>
                        <button name="wf_delivered" string="Delivered" type="object" attrs="{'invisible': [('state','!=','ready')]}" class="oe_highlight"/>
                        <button name="wf_restart" string="Restart" type="object" attrs="{'invisible': [('state','!=','delivered')]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id" domain="[('is_company', '=', True),('is_address', '=', False)]"/>
                                <field name="address_id" domain="[('is_address', '=', True),('parent_id', '=', partner_id)]" widget="selection"/>
                                <field name="intervention_id" domain="[('intervent_partner_id', '=', partner_id)]" />
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="planned_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <separator string="Stock Moves"/>
                                <field name="line_ids">
                                    <tree string="Stock Moves" editable="bottom">
                                        <field name="product_id" />
                                        <field name="product_uom_qty" />
                                        <field name="uom_id" />
                                        <field name="state" readonly="1"/>
                                    </tree>                                
                                </field>
                                <field name="note" placeholder="Add an internal note..." class="oe_inline"/>
                            </page>                            
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>        
        
        <!--hr.analytic.timesheet-->
        <record model="ir.ui.view" id="view_hr_analytic_timesheet_delivery_form">
            <field name="name">hr.analytic.timesheet.delivery.page</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="inherit_id" ref="intervention_report.view_hr_analytic_timesheet_form"/>
            <field name="arch" type="xml">
                <page string="Accounting" position="before">
                       <page string="Delivery">                           
                           <group colspan="4" col="4">
                               <field name="pending_material_present" />
                               <field name="pending_material_detail" />
                               
                               <separator string="Delivered material:" colspan="3"/>
                               <button name="create_picking" string="Create picking" type="object" colspan="1"/>
                               <field name="delivered_ids" nolabel="1" colspan="4" context="{'embedded': True}"/>

                               <separator string="Picking:" colspan="2"/>
                               <button name="link_all_delivery_pending" string="Link all" type="object" colspan="1"/>
                               <button name="dummy_button" string="Refresh" type="object" colspan="1"/>
                               <field name="picking_ids" nolabel="1" readonly="1" colspan="4" />

                               <!--<separator string="Available:" colspan="4"/>
                               <field name="todo_ids" nolabel="1" readonly="1" colspan="4" context="{'show_move': True, 'intervention_id': active_id}"/>-->
                           </group> 
                       </page>                    
                </page>
                <xpath expr="//notebook" position="before">
                <!--<field name="name" position="before">
                </field>     -->
                     <div style="background-color: blue;text-align: center;font-weight:bold;color:white;">
                         <field name="delivery_present" readonly="1" nolabel="1" attrs="{'invisible': [('pending_material_present', '=', False)]}" class="oe_color_blue" colspan="4"/>
                     </div>
                </xpath>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_stock_picking_manual">
            <field name="name">Picking</field>
            <field name="res_model">stock.picking.manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_picking_fast_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <record model="ir.actions.act_window" id="action_stock_picking_manual_todo">
            <field name="name">Picking todo</field>
            <field name="res_model">stock.picking.manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_picking_fast_tree"/>
            <field name="context">{}</field>
            <field name="domain">[('state', '=', 'todo')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_stock_picking_manual_ready">
            <field name="name">Picking ready</field>
            <field name="res_model">stock.picking.manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_picking_fast_tree"/>
            <field name="context">{}</field>
            <field name="domain">[('state', '=', 'ready')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_stock_movement_manual">
            <field name="name">Stock move</field>
            <field name="res_model">stock.move.manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="domain">[('picking_id', '!=', False)]</field>-->
        </record>
        
        <menuitem 
            parent="stock.menu_stock_root" 
            name="Delivery management"
            id="menu_stock_picking_root" 
            sequence="0"
            />
            <menuitem 
                parent="menu_stock_picking_picking" 
                id="menu_stock_picking_picking_todo" 
                action="action_stock_picking_manual_todo"
                sequence="20"
                />
            <menuitem 
                parent="menu_stock_picking_picking" 
                id="menu_stock_picking_picking_ready" 
                action="action_stock_picking_manual_ready"
                sequence="30"
                />
            <menuitem 
                parent="menu_stock_picking_root" 
                id="menu_stock_picking_picking" 
                action="action_stock_picking_manual"
                sequence="40"
                />
                
            <menuitem 
                parent="menu_stock_picking_root" 
                id="menu_stock_picking_move" 
                action="action_stock_movement_manual"
                sequence="50"
                />
            
        
    </data>
</openerp>

