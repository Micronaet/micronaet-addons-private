        <!--hr.intervent.user.mode-->
        <record model="ir.ui.view" id="view_hr_intervent_user_mode_form">
            <field name="name">hr.intervent.user.mode.form</field>
            <field name="model">hr.intervent.user.mode</field>
            <field name="arch" type="xml">
                <form string="Intervent user mode" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                             <field name="name" />
                             <field name="list_price" />
                             <separator string="Note" colspan="4"/>
                             <field name="note" colspan="4" nolabel="1" />
                        </group>
                    </sheet>        
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_hr_intervent_user_mode_tree">
            <field name="name">hr.intervent.user.mode.tree</field>
            <field name="model">hr.intervent.user.mode</field>
            <field name="arch" type="xml">
                <tree string="Intervent user mode">
                     <field name="name" />
                     <field name="list_price" />
                     <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_hr_intervent_user_mode_form">
            <field name="name">Intervent user mode</field>
            <field name="res_model">hr.intervent.user.mode</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_intervent_user_mode_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

