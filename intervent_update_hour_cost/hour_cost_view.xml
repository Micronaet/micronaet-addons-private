<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_product_hour_cost_tree">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="priority" eval="40" />
            <field name="arch" type="xml">
                <tree string="Product Hour cost" editable="bottom">
                    <field name="name" readonly="1"/>
                    <field name="standard_price" required="1" />
                    <field name="hr_date" required="1"/>
                    <!--<field name="hr_status" />-->
                    <button name="update_hr_intervent" string="Update" type="object" icon="gtk-refresh" alert="Intervent from that date will e updated with new hour cost, confirm?"/>
                </tree>
            </field>
        </record>        
           
        <record model="ir.actions.act_window" id="action_product_product_employ_tree">
            <field name="name">Hour cost</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_product_product_hour_cost_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('name', 'ilike', 'Costo orario'), ('active', '=', False)]</field>
        </record>
        
        <menuitem 
            parent="hr.menu_hr_main" 
            id="menu_action_product_product_employ" 
            action="action_product_product_employ_tree"
            sequence="30"
            />
        
    </data>
</openerp>

